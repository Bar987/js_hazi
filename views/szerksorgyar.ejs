<%- include('header') -%>
<div class="container pt-5">
  <h2>Sörgyár <% if(typeof sorgyar === 'undefined') {
      %>
    hozzáadása
    <% }else{ %>
    szerkesztése
    <% } %>
  </h2>
</div>
<div class="conatiner pt-5 pl-5">
  <form>
    <div class="form-group row">
      <label for="inputNev" type="text" class="col-sm-2 col-form-label">Név</label>
      <div class="col-sm-5">
        <input class="form-control" id="inputNev" value="<%= (typeof sorgyar === 'undefined') ? '' : sorgyar.nev =%>" />
      </div>
    </div>
    <div class="form-group row">
      <label for="inputTelephely" type="text" class="col-sm-2 col-form-label">Telephely</label>
      <div class="col-sm-5">
        <input class="form-control" id="inputTelephely"
          value="<%= (typeof sorgyar === 'undefined') ? '' : sorgyar.telephely =%>" />
      </div>
    </div>
    <div class="form-group row">
      <label for="inputBevetel" type="number" class="col-sm-2 col-form-label">Éves bevétel</label>
      <div class="col-sm-5">
        <input class="form-control" id="inputBevetel"
          value="<%= (typeof sorgyar === 'undefined') ? '' : sorgyar.bevetel =%>" />
      </div>
    </div>
  </form>
</div>
<div class="container pt-5">
  <a href="/sorok" type="button" class="btn btn-primary">
    Mentés
  </a>
</div>
<%- include('footer') -%>