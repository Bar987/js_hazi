<%- include('header') -%>
<div class="container pt-5">
	<h2>
		Sör <% if(typeof sor === 'undefined') { %> hozzáadása <% }else{ %>
		szerkesztése <% } %>
	</h2>
</div>
<div class="conatiner pt-5 pl-5">
	<form method="POST">
		<div class="form-group row">
			<label for="inputNev" class="col-sm-2 col-form-label">Név</label>
			<div class="col-sm-5">
				<input
					class="form-control"
					type="text"
					id="inputNev"
					name="nev"
					required
					value="<%= (typeof sor === 'undefined') ? '' : sor.nev %>"
				/>
			</div>
		</div>
		<div class="form-group row">
			<label for="inputFajta" class="col-sm-2 col-form-label"
				>Fajta</label
			>
			<div class="col-sm-5">
				<input
					type="text"
					class="form-control"
					required
					id="inputFajta"
					name="fajta"
					value="<%= (typeof sor === 'undefined') ? '' : sor.fajta %>"
				/>
			</div>
		</div>
		<div class="form-group row">
			<label for="gyartoSelect" class="col-sm-2 col-form-label"
				>Gyártó</label
			>
			<div class="col-sm-5">
				<select class="form-control" id="gyartoSelect" name="_gyarto">
					<% sorgyarak.forEach(function(sorgyar){ %>
					<option value="<%= sorgyar._id%>"><%= sorgyar.nev%></option>
					<% }); %>
				</select>
			</div>
		</div>
		<div class="form-group row">
			<label for="inputAlkohol" class="col-sm-2 col-form-label"
				>Alkoholtartalom</label
			>
			<div class="col-sm-5">
				<input
					type="number"
					class="form-control"
					required
					id="inputAlkohol"
					name="alkohol"
					value="<%= (typeof sor === 'undefined') ? '' : sor.alkohol %>"
				/>
			</div>
		</div>
		<div class="form-group row">
			<label for="inputTerfogat" class="col-sm-2 col-form-label"
				>Térfogat</label
			>
			<div class="col-sm-5">
				<input
					class="form-control"
					required
					id="inputTerfogat"
					name="terfogat"
					type="number"
					value="<%= (typeof sor === 'undefined') ? '' : sor.terfogat %>"
				/>
			</div>
		</div>
		<div class="form-group row">
			<label for="inputOsszetevok" class="col-sm-2 col-form-label"
				>Összetevők</label
			>
			<div class="col-sm-5">
				<input
					class="form-control"
					id="inputOsszetevok"
					name="osszetevok"
					required
					placeholder="Összetevők"
					type="text"
				/>
			</div>
		</div>
		<div class="container pt-5">
			<input
				href="sor"
				type="submit"
				class="btn btn-primary"
				value="Mentés"
			/>
		</div>
	</form>
</div>
<%- include('footer') -%>
