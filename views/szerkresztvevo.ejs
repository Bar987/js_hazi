<%- include('header') -%>
<div class="container pt-5">
	<h2>
		Résztvevő <% if(typeof resztvevo === 'undefined') { %> hozzáadása <%
		}else{ %> szerkesztése <% } %>
	</h2>
</div>
<div class="conatiner pt-5 pl-5">
	<form method="POST">
		<div class="form-group row">
			<label for="inputNev" type="text" class="col-sm-2 col-form-label"
				>Név</label
			>
			<div class="col-sm-5">
				<input
					required
					class="form-control"
					id="inputNev"
					name="nev"
					value="<%= (typeof resztvevo === 'undefined') ? '' : resztvevo.nev %>"
				/>
			</div>
		</div>
		<div class="form-group row">
			<label for="inputLakhely" class="col-sm-2 col-form-label"
				>Lakhely</label
			>
			<div class="col-sm-5">
				<input
					required
					type="text"
					class="form-control"
					id="inputLakhely"
					name="lakhely"
					value="<%= (typeof resztvevo === 'undefined') ? '' : resztvevo.lakhely %>"
				/>
			</div>
		</div>
		<div class="form-group row">
			<label for="inputKor" class="col-sm-2 col-form-label">Kor</label>
			<div class="col-sm-5">
				<input
					required
					type="number"
					class="form-control"
					id="inputKor"
					name="kor"
					value="<%= (typeof resztvevo === 'undefined') ? '' : resztvevo.kor %>"
				/>
			</div>
		</div>
		<fieldset class="form-group">
			<div class="row">
				<legend class="col-form-label col-sm-2 pt-0">Végzettség</legend>
				<div class="col-sm-10">
					<div class="form-check">
						<input
							class="form-check-input"
							type="radio"
							name="vegzettseg"
							id="gridRadios1"
							value="alap"
							checked
						/>
						<label class="form-check-label" for="gridRadios1">
							Alapfokú
						</label>
					</div>
					<div class="form-check">
						<input
							class="form-check-input"
							type="radio"
							name="vegzettseg"
							id="gridRadios2"
							value="kozep"
						/>
						<label class="form-check-label" for="gridRadios2">
							Középfokú
						</label>
					</div>
					<div class="form-check disabled">
						<input
							class="form-check-input"
							type="radio"
							name="vegzettseg"
							id="gridRadios3"
							value="felso"
						/>
						<label class="form-check-label" for="gridRadios3">
							Felsőfokú
						</label>
					</div>
				</div>
			</div>
		</fieldset>
		<div class="form-group row">
			<label for="sorSelect" class="col-sm-2 col-form-label"
				>Kedvenc sör</label
			>
			<div class="col-sm-5">
				<select class="form-control" id="sorSelect" name="_kedvenc">
					<% sorok.forEach(function(sor){ %>
					<option value="<%= sor._id%>"><%= sor.nev%></option>
					<% }); %>
				</select>
			</div>
		</div>
		<div class="container pt-5">
			<input type="submit" class="btn btn-primary" value="Mentés" />
		</div>
	</form>
</div>

<%- include('footer') -%>
